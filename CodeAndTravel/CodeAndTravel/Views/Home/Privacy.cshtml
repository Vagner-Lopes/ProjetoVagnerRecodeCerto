@{
    ViewData["Title"] = "Contaos";
}

<div class="container">

    <h1>@ViewData["Title"]</h1>

    <form asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label for="Nome" class="control-label">Nome</label>
            <input for="Nome" class="form-control" placeholder="Nome" />
            <span validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Email" class="control-label">Email</label>
            <input for="Email" class="form-control" placeholder="Email" />
            <span validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Telefone" class="control-label">Telefone</label>
            <input for="Telefone" id="Telefone" class="form-control" placeholder="(00) 9 1234-4321" /><!--required pattern="[0-9]{3}.[0-9]{3}.[0-9]{3}-[0-9]{2}"-->
            <span validation-for="Telefone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Assunto" class="control-label">Assunto</label>
            <input for="Assunto" class="form-control" placeholder="Assunto" />
            <span validation-for="Assunto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <textarea id="story" name="story" cols="33" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Enviar" class="btn btn-info" />
        </div>
    </form>
</div>
