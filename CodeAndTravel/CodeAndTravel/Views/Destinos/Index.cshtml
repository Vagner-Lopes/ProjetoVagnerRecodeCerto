@model IEnumerable<CodeAndTravel.Models.Destino>

@{
    ViewData["Title"] = "Destinos";
}


<div class="container">
    <h1>Destinos</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Criar Novo Destino</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning"><i class="fas fa-user-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info"><i class="fas fa-info-circle"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger"><i class="fas fa-user-times"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>