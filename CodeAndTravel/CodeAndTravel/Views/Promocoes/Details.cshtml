@model CodeAndTravel.Models.Promocao

@{
    ViewData["Title"] = "Promoções";
}


<div class="container">
    <h1>Promoções</h1>

    <div>
        <h4>Detalhes</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Destino)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Destino.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Desconto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Desconto)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning">Editar</a> |
        <a asp-action="Index" class="btn btn-info">Voltar</a>
    </div>
</div>
