@model CodeAndTravel.Models.Promocao

@{
    ViewData["Title"] = "Promoções";
}

<div class="container">
    <h1>Promoções</h1>

    <h3>Excluir Promoção</h3>
    <div>
        <h4>Promoções</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Destino)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Destino.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Desconto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Desconto)
            </dd>
        </dl>

        <form asp-action="Excluir">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-info">Voltar</a>
        </form>
    </div>
</div>
